#include <stdio.h>

int N, K;
int queue[100001];
int visited[100001];

void Input(void) {
	scanf("%d %d", &N, &K);
}

int Searchtime() {
	for (int i = 0; i < 100001;++i)
		visited[i] = -1;
	int front = 0, rear = 0;
	queue[rear++] = N;
	visited[N] = 0;

	while (front != rear) {

		int now = queue[front++];
		if (now == K) {
			return visited[now];
			break;
		}
		int next[3] = { now * 2,now - 1,now + 1 };
		for (int i = 0; i < 3; ++i) {
			int nxt = next[i];
			if (nxt >= 0 && nxt <= 100000 && visited[nxt] == -1 && i == 0) {
				queue[rear++] = nxt;
				visited[nxt] = visited[now];

			}
			else if (nxt >= 0 && nxt <= 100000 && visited[nxt] == -1 && i != 0) {
				queue[rear++] = nxt;
				visited[nxt] = visited[now] + 1;
			}

		}


	}

}

int main(void) {
	Input();
	int result = Searchtime();
	printf("%d\n", result);
	return 0;
}
